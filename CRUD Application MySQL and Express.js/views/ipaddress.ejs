<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ipaddress</title>
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <link rel="stylesheet" href="/stylesheets/style.css">

</head>
<body class="container">

    <%- include( 'partials/navbar' ) %>

<div class="container" style="margin-top: 50px;">
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link">ipaddress</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/ipaddress/add">Add ipaddress</a>
                </li>
            </ul>
        </div>
    <div class="card-body">

        <% if(data.length) { %>
            <div class="card-holder">
        <% for(var i = 0; i< data.length; i++) { %>
        <div class="card" style="width: 18rem;">
            <img src="http://localhost:5000/images/uploaded_images/<%=data[i].image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">ipaddress: <%= data[i].name%></h5>
              <h6 class="card-subtitle mb-2 text-muted">City: <%= data[i].city%></h6>
              <p class="card-text">ipaddress ID: <%= (i+1) %></p>
              <a class="btn btn-success edit" href="../ipaddress/edit/<%=data[i].id%>">Edit</a>
              <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../ipaddress/delete/<%=data[i].id%>">Delete</a>
            </div>
          </div>
          <% } %>
        </div>
          <% } %>
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No IPAddress found!</p>
        <% } %>

        </div>
    </div>
</div>
</body>
</html>